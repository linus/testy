{
  "include": ["src/*.js", "test/**/*.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  }
}
